<assembly>
    <id>release</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/server</directory>
            <outputDirectory>/glacier-server-${project.version}/conf</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/client</directory>
            <outputDirectory>/glacier-client-${project.version}/conf</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts/</directory>
            <outputDirectory>/glacier-server-${project.version}/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>../glacier-client/target/glacier-client-${project.version}.jar</source>
            <outputDirectory>/glacier-client-${project.version}/lib/</outputDirectory>
            <destName>glacier-client-${project.version}.jar</destName>
        </file>
        <file>
            <source>../glacier-common/target/glacier-common-${project.version}.jar</source>
            <outputDirectory>/glacier-client-${project.version}/lib/</outputDirectory>
            <destName>glacier-common-${project.version}.jar</destName>
        </file>

        <file>
            <source>../glacier-common/target/glacier-common-${project.version}.jar</source>
            <outputDirectory>/glacier-server-${project.version}/lib/</outputDirectory>
            <destName>glacier-common-${project.version}.jar</destName>
        </file>
        <file>
            <source>../glacier-server/target/glacier-server-${project.version}.jar</source>
            <outputDirectory>/glacier-server-${project.version}/lib/</outputDirectory>
            <destName>glacier-server-${project.version}.jar</destName>
        </file>
    </files>

</assembly>
